<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/offerCardView"
        android:layout_width="304dp"
        android:layout_marginTop="10dp"
        android:layout_height="144dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="26dp"
        app:cardBackgroundColor="#FFFEE1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="25dp"
            android:text="SALE"
            android:textSize="10sp"
            android:textColor="@color/sale">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="25dp"
            android:text="UPTO"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black">

        </TextView>


        <TextView
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="66dp"
            android:layout_marginLeft="25dp"
            android:text="%"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/sale">

        </TextView>

        <TextView
            android:id="@+id/percentOfOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="66dp"
            android:layout_marginLeft="45dp"
            android:text="60"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/sale">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="66dp"
            android:layout_marginLeft="80dp"
            android:text="OFF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/offerCategoryNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="28dp"
            android:text="School Collections"
            android:textSize="10sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/black">

        </TextView>

        <ImageView
            android:id="@+id/offerImageView"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="18dp"
            app:srcCompat="@drawable/all" />


    </androidx.cardview.widget.CardView>


</LinearLayout>